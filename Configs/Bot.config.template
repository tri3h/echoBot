#settings for access to VK bot
VK {
    token = "YOUR_TOKEN"
    group_id = "YOUR_GROUP_ID"
}

#settings for access to TG bot
TG {
    token = "YOUR_TOKEN"
}

#text that will be shown when user asks /help command
help_text = "HELP_TEXT"

#text that will be shown when user asks /repeat command
repeat_text = "REPEAT_TEXT"

#default repeat number for every user
default_repeat_num = 1

#set log verbosity. Can be one of the next values : Info/Debug/Warning/Error
log_verbosity = "Debug"